---
import "../styles/global.css";
const title = "title";
const description = "My awesome website";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>
  <body>
    <body>
      <header class="bg-gray-100 py-4 px-8">
        <div class="container mx-auto flex justify-between items-center">
          <div class="font-bold text-blue-500">My Website</div>
          <nav>
            <ul class="flex space-x-4">
              <li><a href="/" class="hover:text-blue-500">Home</a></li>
              <li><a href="/about" class="hover:text-blue-500">About</a></li>
              <li>
                <a href="/gallery" class="hover:text-blue-500">Gallery</a>
              </li>
              <li>
                <a href="/contact" class="hover:text-blue-500">Contact</a>
              </li>
            </ul>
          </nav>
        </div>
      </header>
      <main class="container mx-auto p-4">
        <slot />
      </main>
      <footer class="bg-gray-200 py-4 text-center absolute bottom-0 w-full">
        &copy; {new Date().getFullYear()} My Website
      </footer>
    </body>
  </body>
</html>
